<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/dp_16">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/login_image_dimen"
        android:layout_height="@dimen/login_image_dimen"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/login_avtar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/lable_quick_query"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/login_heading_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon" />

    <LinearLayout
        android:id="@+id/form_frame"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_below="@id/app_title"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/selector_xml_listview_back"
        android:orientation="vertical"
        android:padding="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_title"
        app:layout_constraintVertical_bias="0.19999999">

    </LinearLayout>

    <TextView
        android:id="@+id/form_frame_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="@string/label_register_title"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toTopOf="@+id/form_frame"
        app:layout_constraintStart_toStartOf="@+id/form_frame"
        app:layout_constraintTop_toTopOf="@+id/form_frame" />

    <TextView
        android:id="@+id/form_label_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_24"
        android:text="@string/label_email_mandatory"
        android:textAlignment="textEnd"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@+id/form_label_password"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/form_frame"
        app:layout_constraintTop_toTopOf="@+id/form_frame" />

    <EditText
        android:id="@+id/txt_login_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@drawable/selector_xml_listview_back"
        android:inputType="textEmailAddress"
        android:padding="@dimen/dp_5"
        android:singleLine="true"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/form_label_email"
        app:layout_constraintEnd_toEndOf="@+id/form_frame"
        app:layout_constraintStart_toEndOf="@+id/form_label_email"
        app:layout_constraintTop_toTopOf="@+id/form_label_email" />

    <TextView
        android:id="@+id/form_label_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/label_password_mandatory"
        android:textAlignment="textEnd"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@+id/form_label_retype_password"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/form_frame"
        app:layout_constraintTop_toBottomOf="@+id/form_label_email" />

    <EditText
        android:id="@+id/txt_login_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/selector_xml_listview_back"
        android:inputType="textPassword"
        android:padding="@dimen/dp_5"
        android:singleLine="true"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/form_label_password"
        app:layout_constraintEnd_toEndOf="@+id/form_frame"
        app:layout_constraintStart_toEndOf="@+id/form_label_password"
        app:layout_constraintTop_toTopOf="@+id/form_label_password" />

    <TextView
        android:id="@+id/form_label_retype_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/label_retype_password_mandatory"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@+id/form_frame"
        app:layout_constraintTop_toBottomOf="@+id/form_label_password" />

    <EditText
        android:id="@+id/txt_login_repassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/selector_xml_listview_back"
        android:inputType="textPassword"
        android:padding="@dimen/dp_5"
        android:singleLine="true"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/form_label_retype_password"
        app:layout_constraintEnd_toEndOf="@+id/form_frame"
        app:layout_constraintStart_toEndOf="@+id/form_label_retype_password"
        app:layout_constraintTop_toTopOf="@+id/form_label_retype_password" />

    <Button
        android:id="@+id/btn_signup"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/colorAccent"
        android:text="Register"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/txt_login_repassword"
        app:layout_constraintTop_toBottomOf="@+id/txt_login_repassword" />

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/label_account_exists"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="@+id/btn_signup"
        app:layout_constraintTop_toBottomOf="@+id/btn_signup" />

</android.support.constraint.ConstraintLayout>