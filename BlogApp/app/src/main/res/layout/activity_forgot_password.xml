<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/dp_16">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/login_image_dimen"
        android:layout_height="@dimen/login_image_dimen"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/login_avtar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/screen_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/lable_quick_query"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/login_heading_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon" />

    <LinearLayout
        android:id="@+id/form_frame"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_below="@id/screen_title"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/selector_xml_listview_back"
        android:orientation="vertical"
        android:padding="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/screen_title">

    </LinearLayout>

    <TextView
        android:id="@+id/form_frame_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/screen_title"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@color/colorPrimary"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/label_forget_password_title"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/form_frame"
        app:layout_constraintStart_toStartOf="@+id/form_frame"
        app:layout_constraintTop_toTopOf="@+id/form_frame" />

    <TextView
        android:id="@+id/form_label_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_32"
        android:text="@string/label_enter_email_address"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/form_frame"
        app:layout_constraintTop_toTopOf="@+id/form_frame" />

    <EditText
        android:id="@+id/txt_reset_textbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/selector_xml_listview_back"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/form_label_email"
        app:layout_constraintEnd_toEndOf="@+id/form_frame"
        app:layout_constraintStart_toEndOf="@+id/form_label_email"
        app:layout_constraintTop_toTopOf="@+id/form_label_email" />

    <Button
        android:id="@+id/btn_reset_password"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/label_request_new_password"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/txt_reset_textbox"
        app:layout_constraintStart_toStartOf="@+id/txt_reset_textbox"
        app:layout_constraintTop_toBottomOf="@+id/txt_reset_textbox" />

    <TextView
        android:id="@+id/btn_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/label_already_have_an_account"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/form_frame"
        app:layout_constraintEnd_toEndOf="@+id/form_frame"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset_password"
        app:layout_constraintVertical_bias="0.26" />

</android.support.constraint.ConstraintLayout>